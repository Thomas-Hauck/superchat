{
  "name": "hugo-stripe-integration",
  "version": "1.0.0",
  "dependencies": {
    "stripe": "^13.0.0"
  },
  "scripts": {
    "dev": "concurrently \"hugo server\" \"netlify dev\" \"stripe listen --forward-to localhost:8888/.netlify/functions/webhook\"",
    "dev:hugo": "hugo server --port 1313",
    "dev:functions": "netlify dev --port 8888",
    "dev:stripe": "stripe listen --forward-to localhost:8888/.netlify/functions/webhook"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}